{% extends 'base_admin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


    <div>
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="mb-0 text-gray-800">Articles</h1>
          <a href="{{ path('add_article_admin') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Nouvel article</a>
        </div>
        <br>


        <hr>
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Titre</th>
              <th scope="col">Date de création</th>
              <th scope="col">Publié</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
        {% set i = 1 %}
        {% for article in articles %}
            <tr>
              <th scope="row">{{ i }}</th>
              <td>{{ article.title }}</td>
              <td>{{ article.createdAt|date('d/m/y') }}</td>
              <td>{% if article.isPublished %}
                  <span class="badge badge-success">OUI</span>
                  {% else %}
                  <span class="badge badge-danger">NON</span>
                  {% endif %} </td>
              <td><a href=" {{ path('edit_article_admin', {'slug': article.slug}) }}" class="btn btn-primary" ><i class="fas fa-edit"></i></a>
              <a href=" {{ path('delete_article_admin', {'slug': article.slug}) }}" class="btn btn-danger" onclick="confirm('Voulez-vous vraiment supprimer cet article ?')"><i class="fas fa-trash"></i></a></td>
            </tr>
            {% set i = i + 1 %}
        {% endfor %}            
          </tbody>
        </table>

    </div> 
    <br><br>

    {% block javascripts %}

    {% endblock %}

{% endblock %}