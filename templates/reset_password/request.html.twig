{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        <div class="form-group ">
            <label for="plainPassword">Adresse mail</label>
            {{ form_widget(requestForm.email, {'attr':{'class':'form-control'}}) }}
            <span class="text-danger">{{ form_errors(requestForm.email)}}</span>                
        </div>
        
        <div>
            <small>
                Un mail vous sera envoyé avec un lien de réinitialisation
            </small>
        </div>
        <br><br>
        <button class="btn btn-primary">Réinitialisez</button>
    {{ form_end(requestForm) }}
{% endblock %}