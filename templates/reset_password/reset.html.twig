{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(resetForm) }}
        <div class="form-group col-md-6">
            <label for="plainPassword">Mot de passe</label>
            {{ form_widget(resetForm.plainPassword.first, {'attr':{'class': 'form-control'}}) }}
            <span class="text-danger">{{ form_errors(resetForm.plainPassword.first)}}</span>                
        </div>

        <div class="form-group col-md-6">
            <label for="plainPassword">Répetez votre mot de passe</label>
            {{ form_widget(resetForm.plainPassword.second, {'attr':{'class': 'form-control'}}) }}                
        </div>
        <br>
        <button class="btn btn-primary">Réinitialisez</button>
    {{ form_end(resetForm) }}
{% endblock %}
